<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph" app:startDestination="@id/home">
	
	<fragment android:id="@+id/home" android:name="com.lauruscorp.sexifyapp.features.home.presentation.HomeFragment"
		android:label="@string/home_feature_title" tools:layout="@layout/layout_home">
		
		<action android:id="@+id/action_home_to_coupleNamesEditor" app:destination="@id/coupleNamesEditor" />
	
	</fragment>
	
	<fragment android:id="@+id/coupleNamesEditor"
		android:name="com.lauruscorp.sexifyapp.features.couplenameseditor.presentation.CoupleNamesEditorFragment"
		android:label="@string/couple_names_editor_feature_name" tools:layout="@layout/layout_couple_names_editor">
		
		<action android:id="@+id/action_coupleNamesEditor_to_categoriesSelection"
			app:destination="@id/categoriesSelection" />
	
	</fragment>
	
	<fragment android:id="@+id/categoriesSelection"
		android:name="com.lauruscorp.sexifyapp.features.categoriesselection.presentation.CategoriesSelectionFragment"
		android:label="@string/categories_selection_feature_name" tools:layout="@layout/layout_categories_selection">
		
		<action android:id="@+id/action_categoriesSelection_to_game" app:destination="@id/game"
			app:popUpTo="@id/home" />
	
	</fragment>
	
	<fragment android:id="@+id/game" android:name="com.lauruscorp.sexifyapp.features.game.presentation.GameFragment"
		android:label="@string/game_feature_name" tools:layout="@layout/layout_game">
		
		<action android:id="@+id/action_game_to_home" app:destination="@id/home" />
	
	</fragment>

</navigation>