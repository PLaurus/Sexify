CREATE TABLE IF NOT EXISTS Sex (
	id INTEGER NOT NULL PRIMARY KEY,
	nameTextId INTEGER NOT NULL UNIQUE,
	FOREIGN KEY (nameTextId)
		REFERENCES TextContent(id)
			ON UPDATE CASCADE
			ON DELETE RESTRICT
);

INSERT INTO Sex (id, nameTextId)
VALUES
	(0, 4),
	(1, 5);

selectAllSexes:
SELECT *
FROM Sex;

selectSexById:
SELECT *
FROM Sex
WHERE id = :id
LIMIT 1;